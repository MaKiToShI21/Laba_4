<Window x:Class="Laba4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Новая игра" Width="150" Height="25" Click="NewGame_Click" Margin="0, 0, 0, 10" />
            <Button Content="Загрузить игру" Width="150" Height="25" Click="LoadGame_Click" Margin="0, 0, 0, 10" />
            <Button Content="Выход" Width="150" Height="25" Click="Exit_Click" />
        </StackPanel>
    </Grid>
</Window>